@using Modelos.Quote
@model IEnumerable<Parte>
    @{
        ViewData["Title"] = "Index";
    }

    <h1>Partes</h1>
    <p>Se presenta las partes de la proforma</p>

    <div class="container">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Lista de partes</h3>
            </div>


            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-controller="Parte" asp-action="Create">
                    Crear una parte
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model.Count() > 0)
            {
                <table class=" table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Nombre</td>
                            <td>Stock</td>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Parte parte in Model)
                        {
                            <tr>
                                <td>@parte.ParteId</td>
                                <td>@parte.Nombre</td>
                                <td>@parte.Stock</td>


                                <td>
                                    <center>
                                        <a class="btn btn-warning"
                                           asp-controller="Parte" asp-action="Edit" asp-route-id="@parte.ParteId">
                                            Editar
                                        </a>
                                        <a class="btn btn-danger"
                                           asp-controller="Parte" asp-action="Delete" asp-route-id="@parte.ParteId">
                                            Borrar
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            <div class="col-sm-6">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Salir</a>
                </a>
            </div>
        </div>
    </div>
