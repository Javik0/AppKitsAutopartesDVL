@using Modelos.Quote
@model IEnumerable<Kit>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>Kits</h1>
    <p>Se presenta los Kits para la proforma</p>

    <div class="container">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Lista de kits</h3>
            </div>


            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-controller="Kit" asp-action="Create">
                    Crear una nuevo kit
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model.Count() > 0)
            {
                <table class=" table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Nombre del kit</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Kit kit in Model)
                        {
                            <tr>
                                <td>@kit.KitId</td>
                                <td>@kit.Nombre</td>
                                <td>
                                    <center>
                                        <a class="btn btn-warning"
                                           asp-controller="Kit" asp-action="Edit" asp-route-id="@kit.KitId">
                                            Editar
                                        </a>
                                        <a class="btn btn-danger"
                                           asp-controller="Kit" asp-action="Delete" asp-route-id="@kit.KitId">
                                            Borrar
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            <div class="col-sm-6">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Salir</a>
                </a>
            </div>
        </div>
    </div>




