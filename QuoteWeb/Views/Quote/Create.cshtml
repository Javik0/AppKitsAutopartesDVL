@using Modelos.Quote
@model Quote
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Nueva Proforma</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">

                <div class="form-group">
                    <label class="control-label">Nombre cliente</label>
                    <select class="form-control" asp-for="ClienteId" asp-items="@ViewBag.selectListasClientes">
                        <option value="">---Selecciona un cliente---</option>
                    </select>

                </div>
                <div class="form-group">
                    <label class="control-label">Fecha</label>
                    <input class="form-control" asp-for="Fecha" />
                </div>

                <div class="form-group">
                    <label class="control-label">Nombre del Kit</label>
                    <select class="form-control" asp-for="KitId" asp-items="@ViewBag.selectListasKit">
                        <option value="">---Selecciona un kit---</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <select class="form-control" asp-for="EstadoId" asp-items="@ViewBag.selectListasEstados">
                        <option value="">---Pendiente---</option>
                    </select>
                </div>

