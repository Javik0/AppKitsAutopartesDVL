
@using Modelos.Quote
@model IEnumerable<Cliente>
    @{
        ViewData["Title"] = "Index";
    }

    <h1>CLientes</h1>
    <p>Se presenta la lista de clientes </p>

    <div class="container">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
           
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Lista de materias</h3>
            </div>


            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-controller="Cliente" asp-action="Create">
                    Crear un cliente
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model.Count() > 0)
            {
                <table class=" table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Nombre</td>
                            <td>Correo</td>
                            <td>Telefono</td>
                            <td>Ciudad</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Cliente cliente in Model)
                        {
                            <tr>
                                <td>@cliente.ClienteId,</td>
                                <td>@cliente.Nombre</td>
                                <td>@cliente.Correo</td>
                                <td>@cliente.Telefono</td>
                                <td>@cliente.Ciudad</td>

                                <td>
                                    <center>
                                        <a class="btn btn-warning"
                                           asp-controller="Cliente" asp-action="Edit" asp-route-id="@cliente.ClienteId">
                                            Editar
                                        </a>
                                        <a class="btn btn-danger"
                                           asp-controller="Cliente" asp-action="Delete" asp-route-id="@cliente.ClienteId">
                                            Borrar
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
        <div class="col-sm-6">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Salir</a>
            </a>
        </div>
        </div>
        </div>
