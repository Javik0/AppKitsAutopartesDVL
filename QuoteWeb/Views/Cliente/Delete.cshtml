@using Modelos.Quote
@model Cliente
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Seguro que desea eliminar al cliente ---> @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="ClienteId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Correo</label>
                    <input class="form-control" asp-for="Correo" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Telefono</label>
                    <input class="form-control" asp-for="Telefono" disabled/>
                </div>

                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    <input class="form-control" asp-for="Ciudad" disabled/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


